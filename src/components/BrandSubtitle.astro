---
const { tag = "h2", class: className, ...rest } = Astro.props;

const Parent = tag;
---

<Parent class="subtitle" class:list={className} {...rest}>
  <i> Placeres ocultos </i>
</Parent>

<style lang="scss">
  @use "../styles/scssVariables.scss";

  .subtitle > i {
    font-weight: normal;
    font-family: var(--font-sans-serif);
    font-size: 1.4rem;
    text-transform: initial;
  }

  @media (min-width: scssVariables.$small) {
    .subtitle > i {
      font-size: 1.5rem;
    }
  }
</style>
