---
const { href, openNewPage, class: className, ...rest } = Astro.props;

const Parent = href ? "a" : "button";
---

<Parent
  class="parent"
  class:list={className}
  href={href}
  target={openNewPage ? "_blank" : "_self"}
  {...rest}
>
  <slot />
</Parent>

<style>
  .parent {
    background: var(--color-accent);
    border-radius: 999px;
    padding: 10px 30px;
    color: var(--gray-light-1);
    text-decoration: none;
  }
</style>
