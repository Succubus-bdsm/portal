---
const { href, openNewPage, icon, class: className, ...rest } = Astro.props;

const Parent = href ? "a" : "button";
---

<Parent
  class="parent"
  class:list={[icon ? "parent__icon" : "", className]}
  href={href}
  target={openNewPage ? "_blank" : "_self"}
  {...rest}
>
  <slot />
</Parent>

<style>
  .parent {
    background: var(--color-accent);
    border-radius: 999px;
    padding: 10px 30px;
    color: var(--gray-light-1);
    text-decoration: none;
    cursor: pointer;
  }

  .parent__icon {
    padding: 10px;
    height: 50px;
    width: 50px;
  }
</style>
