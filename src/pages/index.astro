---
import Default from "@/layouts/Default.astro";
import Container from "@/components/Container.astro";
import Button from "@/components/Button.astro";
import BrandTitle from "@/components/BrandTitle.astro";
import BrandSubtitle from "@/components/BrandSubtitle.astro";

import Description from "@/components/home/Description.astro";
import QuotesSection from "@/components/home/QuotesSection.astro";
import LastArticles from "@/components/home/LastArticles.astro";
import Community from "@/components/home/Community.astro";
import Poll from "@/components/home/Poll.astro";
---

<Default>
  <Container>
    <header class="hero py-7">
      <BrandTitle class="hero__header" />
      <BrandSubtitle class="hero-header__subtitle" />

      <img src="/images/separator.svg" alt="" />
      <Button href="https://blog.succubus-bdsm.com/">Ir al Blog</Button>
    </header>

    <Description />
    <QuotesSection />

    <LastArticles />
    <Poll />
    <Community />
  </Container>
</Default>

<style lang="scss">
  @use "../styles/scssVariables.scss";

  .hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin: 7em 0;
    gap: 2.4em;
    position: relative;
  }

  .hero > * {
    position: relative;
  }

  .hero::before {
    content: "";
    height: 300px;
    width: 300px;
    background: radial-gradient(
      circle,
      rgba(36, 30, 70, 0.9) 0,
      rgba(36, 30, 70, 0) 70%
    );
    position: absolute;
    top: calc(50% - 350px);
  }

  @media (min-width: scssVariables.$small) {
    .hero::before {
      height: 500px;
      width: 500px;
      top: calc(50% - 400px);
    }
  }

  .hero__header {
    font-size: 5rem;
    letter-spacing: 8px;
  }

  @media (min-width: scssVariables.$small) {
    .hero__header {
      font-size: 10rem;
    }
  }

  .hero-header__subtitle {
    z-index: 10;
  }
</style>
