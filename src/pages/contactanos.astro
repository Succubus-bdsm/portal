---
import { getImage } from "astro:assets";

import Default from "@/layouts/Default.astro";

import Container from "@/components/Container.astro";
import Link from "@/components/Link.astro";

import succubusPapers from "@/assets/succubus-banner.png";

const optimizedSuccubusPapers = await getImage({
  src: succubusPapers,
  format: "webp",
});
---

<Default>
  <header>
    <div
      class="overlay"
      style={`background-image: url(${optimizedSuccubusPapers.src})`}
    >
    </div>
    <h1 class="page-title">Contáctanos</h1>
  </header>
  <Container class="content my-10 gap-15">
    <div>
      <h2>Envíanos un correo</h2>
      <Link
        href="mailto:contact@succubus-bdsm.com"
        underline={true}
        target="_blank"
      >
        contact@succubus-bdsm.com
      </Link>
    </div>
    <div>
      <h2>O Contáctanos en Telegram</h2>
      <Link
        href="https://t.me/+co-jX7LGR-8xMGEx"
        underline={true}
        target="_blank"
      >
        https://t.me/+co-jX7LGR-8xMGEx
      </Link>
    </div>
  </Container>
  <section></section>
</Default>

<style lang="scss">
  @use "../styles/scssVariables";

  header {
    padding: 230px 0;
    position: relative;
    text-align: center;
  }

  .overlay {
    filter: brightness(80%) contrast(110%) saturate(80%) blur(2px)
      hue-rotate(0deg);
    position: absolute;
    left: -240px;
    top: -180px;
    right: 0;
    bottom: 0;
    background-color: black;
    background-size: cover;
    opacity: 0.3;
    z-index: -1;
  }

  @media (min-width: scssVariables.$small) {
    .overlay {
      top: 0;
      left: 0;
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    max-width: 600px;
  }

  h2 {
    font-family: var(--font-sans-serif);
    font-size: 2rem;
    text-transform: unset;
  }
</style>
